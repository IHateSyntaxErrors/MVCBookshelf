@using MVCBookshelf.Content.Values
<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/fontawesome")
    <title>@ViewBag.Title</title>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
</head>


<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/Content/Images/bookshelf.png" class="img-thumbnail" height="30" width="30" /> @Strings.navBarTitle </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">
                        <i class="fa fa-search"></i>&nbsp;
                        @Strings.navBarReferences
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-cogs"></i>&nbsp;
                        @Strings.navBarAdministration
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="@Url.Action("Authors", "Administration")">@Strings.navBarAdministrationDropdownAuthors</a>
                        <a class="dropdown-item" href="@Url.Action("Discounts", "Administration")">@Strings.navBarAdministrationDropdownDiscounts</a>
                        <a class="dropdown-item" href="@Url.Action("Employees", "Administration")">@Strings.navBarAdministrationDropdownEmployees</a>
                        <a class="dropdown-item" href="@Url.Action("Jobs", "Administration")">@Strings.navBarAdministrationDropdownJobs</a>
                        <a class="dropdown-item" href="@Url.Action("Publishers", "Administration")">@Strings.navBarAdministrationDropdownPublishers</a>
                        <a class="dropdown-item" href="@Url.Action("Roysched", "Administration")">@Strings.navBarAdministrationDropdownRoysched</a>
                        <a class="dropdown-item" href="@Url.Action("Sales", "Administration")">@Strings.navBarAdministrationDropdownSales</a>
                        <a class="dropdown-item" href="@Url.Action("Stores", "Administration")">@Strings.navBarAdministrationDropdownStores</a>
                        <a class="dropdown-item" href="@Url.Action("Titles", "Administration")">@Strings.navBarAdministrationDropdownTitles</a>
                        <a class="dropdown-item" href="@Url.Action("TitleAuthors", "Administration")">@Strings.navBarAdministrationDropdownTitleAuthors</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div id="SpaceFromNavBar">
        <br />
        <br />
        <br />
    </div>

    <div class="container body-content">
        @RenderBody()


    </div>


    <!-- Footer-->
    <div id="SpaceFromFooter">
        <br />
        <br />
        <br />
    </div>
    <footer class="card-footer fixed-bottom" style="padding-top:50px">
        <div class="container">
            <div class="row">
                <!-- Footer Location-->
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <h4 class="text-uppercase mb-4">@Strings.footerHeaderLocation</h4>
                    <p class="lead mb-0">
                        @Strings.footerDescriptionLocation
                    </p>
                </div>
                <!-- Footer Social Icons-->
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <h4 class="text-uppercase mb-4">@Strings.footerHeaderContactDetails</h4>
                    <p class="lead mb-0">
                        @Strings.footerDescriptionContactDetails
                    </p>
                </div>
                <!-- Footer About Text-->
                <div class="col-lg-4">
                    <h4 class="text-uppercase mb-4">@Strings.footerHeaderAboutUs</h4>
                    <p class="lead mb-0">
                        @Strings.footerDescriptionAboutUs
                    </p>
                </div>
            </div>
            <hr>
            <div class="container"><small>Copyright &copy; Team Rocket  @DateTime.Now.Year.</small></div>
        </div>
    </footer>

</body>
</html>