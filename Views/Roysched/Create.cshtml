@model MVCBookshelf.Models.roysched
@using MVCBookshelf.Content.Values

@{ ViewBag.Title = Lang.royschedPageCreateTitle; }


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="jumbotron">
        <div class="form-horizontal">
            <!-- Back Button -->
            <div class="btn-toolbar justify-content-lg-start">
                <p><a href="/Roysched/Index" id="btn-back" class="btn btn-primary btn-lg"><i class="fa fa-arrow-left"></i></a></p>
            </div>
            <br />

            <h2>@Lang.royschedPageButtonCreate</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.title_id, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.title_id, new { htmlAttributes = new { @class = "form-control col-lg", @placeholder = Lang.royschedPageFormPlaceholderTitleId } })
                    @Html.ValidationMessageFor(model => model.title_id, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.royalty, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.royalty, new { htmlAttributes = new { @class = "form-control col-lg", @placeholder = Lang.royschedPageFormPlaceholderRoyalty } })
                    @Html.ValidationMessageFor(model => model.royalty, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.lorange, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.lorange, new { htmlAttributes = new { @class = "form-control col-lg", @placeholder = Lang.royschedPageFormPlaceholderLorange } })
                    @Html.ValidationMessageFor(model => model.lorange, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.hirange, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.hirange, new { htmlAttributes = new { @class = "form-control col-lg", @placeholder = Lang.royschedPageFormPlaceholderHirange } })
                    @Html.ValidationMessageFor(model => model.hirange, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />
            <button type="submit" id="btn-create-submit" class="btn btn-primary btn-lg"><i class="fa fa-plus"></i> &nbsp; @Lang.buttonCreate</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
