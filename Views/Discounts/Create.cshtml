@model MVCBookshelf.Models.discounts
@using MVCBookshelf.Content.Values

@{
    ViewBag.Title = Lang.discountsPageCreateTitle;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="jumbotron">
        <div class="form-horizontal">
            <!-- Back Button -->
            <div class="btn-toolbar justify-content-lg-start">
                <p><a href="/Discounts/Index" id="btn-back" class="btn btn-primary btn-lg"><i class="fa fa-arrow-left"></i></a></p>
            </div>
            <br />

            <h2>@Lang.discountsPageButtonCreate</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.discounttype, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.discounttype, new { htmlAttributes = new { @class = "form-control col-lg", @placeholder = Lang.discountsPageFormPlaceholderDiscountType } })
                @Html.ValidationMessageFor(model => model.discounttype, "", new { @class = "text-danger" })
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.stor_id, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.stor_id, new { htmlAttributes = new { @class = "form-control col-lg", @placeholder = Lang.discountsPageFormPlaceholderStoreID } })
                    @Html.ValidationMessageFor(model => model.stor_id, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.discount, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.discount, new { htmlAttributes = new { @class = "form-control col-lg", @placeholder = Lang.discountsPageFormPlaceholderDiscount } })
                    @Html.ValidationMessageFor(model => model.discount, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.lowqty, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.lowqty, new { htmlAttributes = new { @class = "form-control col-lg", @placeholder = Lang.discountsPageFormPlaceholderLowQty } })
                    @Html.ValidationMessageFor(model => model.lowqty, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.highqty, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.highqty, new { htmlAttributes = new { @class = "form-control col-lg", @placeholder = Lang.discountsPageFormPlaceholderHighQty } })
                    @Html.ValidationMessageFor(model => model.highqty, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />
            <button type="submit" id="btn-create-submit" class="btn btn-primary btn-lg"><i class="fa fa-plus"></i> &nbsp; @Lang.buttonCreate</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
