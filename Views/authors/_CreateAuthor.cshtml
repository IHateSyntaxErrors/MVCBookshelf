@model MVCBookshelf.Models.authors
@using MVCBookshelf.Content.Values
<!-- Modal -->
<div id="createAuthor" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Lang.homePageModal1Header</h4>
                <button type="button" class="close" data-dismiss="modal"><i class="bi bi-x"></i></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-dismissible alert-primary" role="alert">
                    <span type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></span>
                    <p>@Lang.homePageModal1Desc</p>
                </div>
            </div>

            <div class="modal-body">
                <form id="formModal1" action="Create" class="form-horizontal" novalidate>
                    <div class="form-group" id="divInputTopNum">
                        <label for="inputTopNum">@Lang.homePageModal1FormTopNumLabel</label>
                        <input type="text" class="form-control" id="inputTopNum" placeholder="@Lang.homePageModal1FormPlaceholderTopNum" required>
                        <div class="invalid-feedback" />
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="inputDateFrom">@Lang.homePageModal1FormDateFromLabel</label>
                        <input type="date" class="form-control" id="inputDateFrom" placeholder="@Lang.homePageModal1FormPlaceholderDateFrom">
                        <div class="invalid-feedback" />
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="inputDateTo">@Lang.homePageModal1FormDateToLabel</label>
                        <input type="date" class="form-control" id="inputDateTo" placeholder="@Lang.homePageModal1FormPlaceholderDateTo">
                    </div>
                    <div class="modal-footer"></div>
                    <div class="btn-toolbar justify-content-lg-start">
                        <button type="submit" id="buttonSubmitFormModal1" class="btn btn-primary btn-lg"><i class="fa fa-search"></i> &nbsp; @Lang.homePageModal1ButtonSearch</button>
                        <button type="button" class="btn btn-secondary btn-lg ml-2" data-dismiss="modal">@Lang.homePageModal1ButtonClose</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>