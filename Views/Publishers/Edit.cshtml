@model MVCBookshelf.Models.publishers
@using MVCBookshelf.Content.Values

@{
    ViewBag.Title = Lang.publishersPageEditTitle;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="jumbotron">
        <div class="form-horizontal">
            <!-- Back Button -->
            <div class="btn-toolbar justify-content-lg-start">
                <p><a href="/Publishers/Index" id="btn-back" class="btn btn-primary btn-lg"><i class="fa fa-arrow-left"></i></a></p>
            </div>
            <br />

            <h2>@Lang.publishersPageHeaderEdit</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.pub_id)

            <div class="form-group">
                @Html.LabelFor(model => model.pub_name, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.pub_name, new { htmlAttributes = new { @class = "form-control col-lg", @placeholder = Lang.publishersPageFormPlaceholderPubName } })
                @Html.ValidationMessageFor(model => model.pub_name, "", new { @class = "text-danger" })
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.country, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.country, new { htmlAttributes = new { @class = "form-control col-lg", @placeholder = Lang.publishersPageFormPlaceholderCountry } })
                    @Html.ValidationMessageFor(model => model.country, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.city, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.city, new { htmlAttributes = new { @class = "form-control col-lg", @placeholder = Lang.publishersPageFormPlaceholderCity } })
                    @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.state, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.state, new { htmlAttributes = new { @class = "form-control col-lg", @placeholder = Lang.publishersPageFormPlaceholderState } })
                    @Html.ValidationMessageFor(model => model.state, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.pub_info.pr_info, htmlAttributes: new { @class = "control-label" })
                @Html.TextAreaFor(model => model.pub_info.pr_info, new { @class = "form-control col-lg", @rows = "3" })
                @Html.ValidationMessageFor(model => model.pub_info.pr_info, "", new { @class = "text-danger" })
            </div>

            <br />
            <button type="submit" id="btn-create-submit" class="btn btn-primary btn-lg"><i class="fa fa-save"></i> &nbsp; @Lang.buttonEdit</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}