@model MVCBookshelf.Models.jobs
@using MVCBookshelf.Content.Values

@{
    ViewBag.Title = Lang.jobsPageDeleteTitle;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="jumbotron">
        <div class="form-horizontal">
            <!-- Back Button -->
            <div class="btn-toolbar justify-content-lg-start">
                <p><a href="/Jobs/Index" id="btn-back" class="btn btn-primary btn-lg"><i class="fa fa-arrow-left"></i></a></p>
            </div>
            <br />

            <h2>@Lang.jobsPageHeaderDelete</h2>
            <h3>@Lang.jobsPageHeaderDelete2</h3>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.job_desc, htmlAttributes: new { @class = "control-label" })
                @Html.TextAreaFor(model => model.job_desc, new { @class = "form-control col-lg", @rows = "3", @readonly = "" })
                @Html.ValidationMessageFor(model => model.job_desc, "", new { @class = "text-danger" })
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.min_lvl, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.min_lvl, new { htmlAttributes = new { @class = "form-control col-lg", @readonly = "" } })
                    @Html.ValidationMessageFor(model => model.min_lvl, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.max_lvl, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.max_lvl, new { htmlAttributes = new { @class = "form-control col-lg", @readonly = "" } })
                    @Html.ValidationMessageFor(model => model.max_lvl, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />
            <button type="submit" id="btn-create-submit" class="btn btn-primary btn-lg btn-danger"><i class="fa fa-trash"></i> &nbsp; @Lang.buttonDelete</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
