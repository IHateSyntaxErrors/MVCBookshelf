@model MVCBookshelf.Models.sales
@using MVCBookshelf.Content.Values

@{
    ViewBag.Title = Lang.salesPageCreateTitle;
}

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<script>
    $(function () {
        $('input[type=date]').datepicker();
    });
</script>

<div class="jumbotron">
    <div class="form-horizontal">
        <!-- Back Button -->
        <div class="btn-toolbar justify-content-lg-start">
            <p><a href="/Authors/Index" id="btn-back" class="btn btn-primary btn-lg"><i class="fa fa-arrow-left"></i></a></p>
        </div>

        <br />

        <h2>@Lang.titlePageOrgerID</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.stores.stor_name, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.stores.stor_name, new { htmlAttributes = new { @class = "form-control col-lg" } })
                @Html.ValidationMessageFor(model => model.stores.stor_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-2">
                @Html.LabelFor(model => model.ord_num, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.ord_num, new { htmlAttributes = new { @class = "form-control col-lg", @type= "date"  } })
                @Html.ValidationMessageFor(model => model.ord_num, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-2">
                @Html.LabelFor(model => model.ord_num, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.ord_num, new { htmlAttributes = new { @class = "form-control col-lg", @type= "date" } })
                @Html.ValidationMessageFor(model => model.ord_num, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />
        <button type="submit" id="btn-create-submit" class="btn btn-primary btn-lg"><i class="fa fa-search"></i> &nbsp; @Lang.buttonSearch</button>
    </div>
</div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ord_num)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.stores.stor_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.titles.title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ord_num)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stores.stor_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.titles.title)
            </td>
        </tr>
    }

</table>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}