@model MVCBookshelf.Models.authors
@using MVCBookshelf.Content.Values

@{
    ViewBag.Title = Lang.authorsPageCreateTitle;
}

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<script>
    $(function () {
        $('input[type=date]').datepicker();
    });
</script>

<div class="jumbotron">
    <div class="form-horizontal">
        <!-- Back Button -->
        <div class="btn-toolbar justify-content-lg-start">
            <p><a href="/Authors/Index" id="btn-back" class="btn btn-primary btn-lg"><i class="fa fa-arrow-left"></i></a></p>
        </div>

        <br />

        <h2>@Lang.authorsPageButtonCreate</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.au_fname, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.au_fname, new { htmlAttributes = new { @class = "form-control col-lg" } })
                @Html.ValidationMessageFor(model => model.au_fname, "", new { @class = "text-danger" })
            </div>

        </div>



        <div class="form-row">
            <div class="form-group col-md-2">
                @Html.LabelFor(model => model.city, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.city, new { htmlAttributes = new { @class = "form-control col-lg", @type= "date"  } })
                @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-2">
                @Html.LabelFor(model => model.state, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.state, new { htmlAttributes = new { @class = "form-control col-lg", @type= "date" } })
                @Html.ValidationMessageFor(model => model.state, "", new { @class = "text-danger" })
            </div>

        </div>


        <br />
        <button type="submit" id="btn-create-submit" class="btn btn-primary btn-lg"><i class="fa fa-search"></i> &nbsp; @Lang.buttonSearch</button>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
