@model IEnumerable<MVCBookshelf.Models.authors>
@using MVCBookshelf.Content.Values

@{
    ViewBag.Title = Lang.authorsPageCreateTitle;
}

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<script>
    $(function () {
        $('input[type=date]').datepicker();
    });
</script>

<div class="jumbotron">
    <div class="form-horizontal">
        <!-- Back Button -->
        <div class="btn-toolbar justify-content-lg-start">
            <p><a href="/Authors/Index" id="btn-back" class="btn btn-primary btn-lg"><i class="fa fa-arrow-left"></i></a></p>
        </div>

        <br />

        <h2>Search Top Of Sales</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-row">
            <div class="form-group col-md-4">
                <label>Store Name</label>
                <input type="number" class="form-control" id="topSales" name="numOfTopSales" placeholder="Type a number">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-2">
                <label>From Date</label>
                <input type="date" class="form-control" id="dateFrom" name="lastname" placeholder="">
            </div>
            <div class="form-group col-md-2">
                <label>To Date</label>
                <input type="date" class="form-control" id="dateTo" name="lastname" placeholder="">
            </div>
        </div>

        <br />
        <button type="submit" id="btn-create-submit" class="btn btn-primary btn-lg"><i class="fa fa-search"></i> &nbsp; @Lang.buttonSearch</button>
    </div>
</div>
}


<table class="table">
    <tr>
        <th>
          oooooo
        </th>
        <th>
            iiiiiii
        </th>
        <th>
            ddddd
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.au_fname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.au_fname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.au_lname)
        </td>

    </tr>
}

</table>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}